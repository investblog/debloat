{
  "name": "debloat",
  "version": "1.0.2",
  "description": "Hide AI features, block sponsored content, stop telemetry. One click, no admin rights.",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:edge": "wxt -b edge",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:edge": "wxt build -b edge",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:edge": "wxt zip -b edge",
    "zip:all": "wxt zip && wxt zip -b firefox && wxt zip -b edge",
    "build:all": "wxt build && wxt build -b firefox && wxt build -b edge",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/ wxt.config.ts",
    "lint:fix": "biome check --write src/ wxt.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "check": "tsc --noEmit && biome check src/ wxt.config.ts && vitest run"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "happy-dom": "^20.7.0",
    "playwright": "^1.49.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18",
    "wxt": "^0.19.0"
  }
}
